<div class="row">
<div class="col-md-6">
<%= simple_form_for(@user_profile) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :tagline, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :about, input_html: { class: 'form-control', rows: 10} %>
  </div>

  <div class="form-group">
    <%= f.input :image, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :email, input_html: { class: 'form-control'}, label: 'Make your email visible by entering it here' %>
  </div>
  <div class="form-group">
    <%= f.input :phone, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :url, input_html: { class: 'form-control'}, label: 'Your blog or website' %>
  </div>
  <div class="form-group">
    <%= f.input :twitter, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :facebook, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :google, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :linkedin, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :github, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :mentor, input_html: { class: 'form-control'} %>
  </div>
    <%= f.button :submit %>
<% end %>
</div>
</div>